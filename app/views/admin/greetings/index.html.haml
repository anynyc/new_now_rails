
.content-wrapper
  / Content Header (Page header)
  %section.content-header
    %h1
      Greetings
      -# %small All New Now Posts
    %ol.breadcrumb
      %li
        %a{:href => admin_root_path}
          %i.fa.fa-dashboard
          Home
      %li.active
        %a{:href => admin_greetings_path}
          Gratifications
  / Main content
  %section.content
    .row
      .col-xs-12
        .box
          .box-header
            %h3.box-title All Greetings
            .box-tools
              %a{:href => new_admin_greeting_path}
                %button.btn.btn-sm.btn-default
                  %i.fa.fa-plus-circle
          .box-body.table-responsive.no-padding
            %table.table.table-hover{:style => "width: 100%;"}
              %tr
                %th Edition
                %th Title
              - @greetings.each do |greeting|
                %tr
                  %td= greeting.edition
                  %td= greeting.title
                  %td
                    %span= link_to "", edit_admin_greeting_path(greeting), class: 'btn fa fa-pencil'
                    %span= link_to "", admin_greeting_path(greeting), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn fa fa-trash'
